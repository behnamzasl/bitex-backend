{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "pretty": true,
    "target": "es6",
    "outDir": "dist",
    "emitDecoratorMetadata": true
  },
  "exclude": [
    "node_modules/**/*",
    "test"
  ]
}